//--------------------------------------------------------------
// Enable ETP Strict Mode
// ETP Strict Mode enables Total Cookie Protection (TCP)
//--------------------------------------------------------------
user_pref("browser.contentblocking.category", "strict");

//--------------------------------------------------------------
// Disable ETP web compat features
//--------------------------------------------------------------
