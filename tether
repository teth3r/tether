//--------------------------------------------------------------
// Enable the DNT (Do Not Track) HTTP header
//--------------------------------------------------------------
user_pref("privacy.donottrackheader.enabled", true);

//--------------------------------------------------------------
// Disable WebRTC (Web Real-Time Communication)
