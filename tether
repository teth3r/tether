//--------------------------------------------------------------
// Disable "ignore this warning" on SB warnings
//--------------------------------------------------------------
user_pref("browser.safebrowsing.allowOverride", false);

//--------------------------------------------------------------
// Disable link prefetching
//--------------------------------------------------------------
